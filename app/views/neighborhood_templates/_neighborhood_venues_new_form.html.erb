<!-- Form venue start -->
<form action="/create_venue_from_neighborhood" method="post">
<!-- Form venue end -->

  <!-- Label and input for name start -->
  <div class="form-group">
    <label for="name">
      Name
    </label>

    <!-- Input for name start -->
    <input type="text" id="name" name="name" class="form-control" value="<%= @venue.name %>">
    <!-- Input for name end -->
  </div>
  <!-- Label and input for name end -->

  <!-- Label and input for dish_id start -->
  <div class="form-group">
    <label for="dish_id">
      Dish
    </label>

    <!-- Input for dish_id start -->
    <input type="text" id="dish_id" name="dish_id" class="form-control" value="<%= @venue.dish_id %>">
    <!-- Input for dish_id end -->
  </div>
  <!-- Label and input for dish_id end -->

  <!-- Label and input for neighborhood_id start -->
  <!-- Input for neighborhood_id start -->
  <input type="hidden" name="neighborhood_id" value="<%= @neighborhood.id %>">
  <!-- Input for neighborhood_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create venue
  </button>
</form>
