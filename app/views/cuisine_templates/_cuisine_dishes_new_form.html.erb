<!-- Form dish start -->
<form action="/create_dish_from_cuisine" method="post">
<!-- Form dish end -->

  <!-- Label and input for name start -->
  <div class="form-group">
    <label for="name">
      Name
    </label>

    <!-- Input for name start -->
    <input type="text" id="name" name="name" class="form-control" value="<%= @dish.name %>">
    <!-- Input for name end -->
  </div>
  <!-- Label and input for name end -->

  <!-- Label and input for type_meal start -->
  <div class="form-group">
    <label for="type_meal">
      Type meal
    </label>

    <!-- Input for type_meal start -->
    <input type="text" id="type_meal" name="type_meal" class="form-control" value="<%= @dish.type_meal %>">
    <!-- Input for type_meal end -->
  </div>
  <!-- Label and input for type_meal end -->

  <!-- Label and input for cuisine_id start -->
  <!-- Input for cuisine_id start -->
  <input type="hidden" name="cuisine_id" value="<%= @cuisine.id %>">
  <!-- Input for cuisine_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create dish
  </button>
</form>
